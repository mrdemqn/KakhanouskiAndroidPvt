<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@color/backLoginOpacityEditText</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@fonts/monda_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:hint">@string/username</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuNavigationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/backgroundButton</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="DataTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fieldsTextView</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name="InfTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/profileDataTextView</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Dz6StudentsDetailsNameAge">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dz6TextView</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SearchEditText">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@color/backOpacitySearchEditText</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@fonts/monda_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
