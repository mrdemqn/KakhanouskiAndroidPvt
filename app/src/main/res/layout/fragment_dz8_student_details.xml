<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDz6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dz8AvatarImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_shape"
            android:padding="@dimen/border_avatar_width"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/dz8NameLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal|start"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/dz8NameTitleTextView"
                style="@style/Dz6StudentsDetailsNameAge"
                tools:text="Name" />

            <TextView
                android:id="@+id/dz8NameTextView"
                style="@style/Dz6StudentsDetailsNameAge"
                tools:text="Pelmen Pelmen" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dz8AgeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/dz8AgeTitleTextView"
                style="@style/Dz6StudentsDetailsNameAge"
                tools:text="Age" />

            <TextView
                android:id="@+id/dz8AgeTextView"
                style="@style/Dz6StudentsDetailsNameAge"
                tools:text="19" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/dz12ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:indeterminate="true"
            android:indeterminateTint="@color/progressBar"
            android:indeterminateTintMode="src_over"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp">

            <Button
                android:id="@+id/dz8editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:background="@color/dz6BackgroundButton"
                android:text="@string/edit_button"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dz8deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:background="@color/dz6BackgroundButton"
                android:text="@string/dz6_delete_button"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>