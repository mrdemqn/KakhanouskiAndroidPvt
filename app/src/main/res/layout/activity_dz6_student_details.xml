<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDz6"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dz6AvatarImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@drawable/border_shape"
        android:padding="@dimen/border_avatar_width"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/dz6NameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dz6AvatarImageView"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/dz6NameTitleTextView"
            style="@style/Dz6StudentsDetailsNameAge"
            tools:text="Name" />

        <TextView
            android:id="@+id/dz6NameTextView"
            style="@style/Dz6StudentsDetailsNameAge"
            tools:text="Pelmen Pelmen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dz6AgeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dz6NameLinearLayout"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|start"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/dz6AgeTitleTextView"
            style="@style/Dz6StudentsDetailsNameAge"
            tools:text="Age" />

        <TextView
            android:id="@+id/dz6AgeTextView"
            style="@style/Dz6StudentsDetailsNameAge"
            tools:text="19" />
    </LinearLayout>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="45dp"
        android:background="@color/dz6BackgroundButton"
        android:text="@string/edit_button"
        android:textSize="18sp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="45dp"
        android:background="@color/dz6BackgroundButton"
        android:text="@string/delete_button"
        android:textSize="18sp" />

</RelativeLayout>