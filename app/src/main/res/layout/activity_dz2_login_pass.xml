<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/backGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/login_logo" />

    <EditText
        android:id="@+id/oneEditText"
        style="@style/LoginEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@color/backLoginOpacityEditText"
        android:drawableStart="@drawable/ic_login_name"
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/twoEditText"
        style="@style/LoginEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/oneEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/backLoginOpacityEditText"
        android:drawableStart="@drawable/ic_login_password"
        android:hint="@string/password"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/twoEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/backLogIn"
        android:text="@string/log_in" />

    <Button
        android:id="@+id/oneTextView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/logInButton"
        android:layout_centerInParent="true"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:text="@string/forgot_button"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/createAccButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/oneTextView"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:background="@color/backCreateAcc"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="@string/create_account" />
</RelativeLayout>